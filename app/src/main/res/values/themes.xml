<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <!-- Bottom Sheet Rounded Corner -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_up_arch</item>
    </style>

    <!-- Product -->
    <style name="AppTheme.Product" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="ExpandedTittleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    <style name="CollapsedTittleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>