<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/green_border"
        android:visibility="gone"
        android:background="@drawable/shape_rectangle_stroke_green_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="0.2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_dark"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="@dimen/_1sdp"
        card_view:cardCornerRadius="@dimen/_2sdp">

        <ImageView

            android:id="@+id/image_variation"
            android:layout_width="@dimen/_53sdp"
            android:layout_height="@dimen/_53sdp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dummy_1" />

    </androidx.cardview.widget.CardView>


</FrameLayout>


