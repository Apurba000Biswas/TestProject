<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/specification_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            app:srcCompat="@drawable/ic_specifications"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="#4D4D4D"
            android:text="Specifications"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            app:srcCompat="@drawable/ic_right_arrow"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/specification_holder" />


    <LinearLayout
        android:id="@+id/review_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_specifications" />



        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Reviews"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_right_arrow" />


    </LinearLayout>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/review_holder" />

    <LinearLayout
        android:id="@+id/how_to_order_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_specifications" />



        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="How to Order"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_right_arrow" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/how_to_order_holder" />

    <LinearLayout
        android:id="@+id/faq_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_specifications" />



        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="FAQ"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_right_arrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/faq_holder" />

    <LinearLayout
        android:id="@+id/whole_sale_inquiry_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_specifications" />



        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Wholesale Inquiry"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_right_arrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/whole_sale_inquiry_holder" />



</androidx.constraintlayout.widget.ConstraintLayout>